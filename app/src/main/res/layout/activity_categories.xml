<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    android:orientation="horizontal">

<!--    tools:context=".ItemsActivity"-->

    <androidx.cardview.widget.CardView
        android:id="@+id/jewellery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/purple_my"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_jewelry"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_jewelry" />

            <TextView
                android:id="@+id/textView_jewelry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/comicneue"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Jewelry"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/electronics"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/purple_my"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_electronics"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_jewelry" />

            <TextView
                android:id="@+id/textView_electronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/comicneue"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Electronics"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mensClothing"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/purple_my"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_mensClothing"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_jewelry" />

            <TextView
                android:id="@+id/textView_mensClothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/comicneue"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Mens clothing"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/womensClothing"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/purple_my"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_womensClothing"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_jewelry" />

            <TextView
                android:id="@+id/textView_womensClothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/comicneue"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Women's clothing"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>