<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity"
    android:background="@color/purple_my"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:src="@drawable/ic_finalwelcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comicneue_bold"
            android:gravity="center"
            android:text="@string/wellcome"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans"
            android:gravity="center"
            android:text="@string/project"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/reg_main"
            android:layout_width="192dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons_corner"
            android:fontFamily="@font/gideonroman_regular"
            android:onClick="registration"
            android:text="@string/registration"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_in_main"
            android:layout_width="192dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/gideonroman_regular"
            android:onClick="login"
            android:text="@string/signIn"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</RelativeLayout>